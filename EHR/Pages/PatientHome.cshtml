@page
@model EHR.Pages.PatientHomeModel
@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = "_Layout";
}

<div class="container mt-5">

   
    <h2 class="text-center text-primary mb-4">
        👋 Welcome, <strong>@Model.PatientName</strong>
    </h2>

    @if (!string.IsNullOrEmpty(Model.NotificationMessage))
    {
            <div class="alert alert-success text-center fw-bold shadow-sm mb-4">
            @Model.NotificationMessage
            </div>
    }

    @if (!string.IsNullOrEmpty(Model.LastPrescription))
    {
            <div class="alert alert-info text-center shadow-sm mb-4">
                <strong>💊 Latest Prescription</strong><br />
                <span class="d-block mt-2">@Model.LastPrescription</span>
                <span class="d-block text-muted mt-1">
                    By Dr. @Model.DoctorName on @Model.PrescriptionDate?.ToString("yyyy-MM-dd HH:mm")
                </span>
            </div>
    }

    <div class="d-flex flex-column align-items-center gap-3 mt-4">
        <a asp-page="/NewAppointment" class="btn btn-primary btn-lg w-50">
            📅 Book New Appointment
        </a>

        <a asp-page="/MyPrescriptions" class="btn btn-success btn-lg w-50">
            💊 View All Prescriptions
        </a>
    </div>

</div>

<style>
    .container {
        max-width: 800px;
    }
</style>